.detailContainer {
  position: relative;
  height: 100%;
}
.detailContainer .top {
  height: 45%;
  position: relative;
}
.detailContainer .top .content {
  position: absolute;
  left: 10%;
  top: 20%;
}
.detailContainer .top .content .topImg {
  width: 200rpx;
  height: 200rpx;
}
.detailContainer .main {
  height: 55%;
  border-radius: 50rpx;
  background-color: #fff;
  margin-top: -50rpx;
  padding: 50rpx 30rpx 0 30rpx;
}
.detailContainer .main .title {
  font-weight: bold;
  margin: 20rpx 0;
}
.detailContainer .main .address, .detailContainer .main .content, .detailContainer .main .time {
  font-size: 24rpx;
  color: #888;
  margin: 20rpx 0;
  line-height: 50rpx;
}
.detailContainer .main .useback {
  height: 15%;
  display: flex;
  align-items: center;
  background-color: #F4F4F4;
  border-radius: 20rpx;
  padding: 0 30rpx;
}
.detailContainer .main .useback .usebackImg {
  width: 80rpx;
  height: 50rpx;
}
.detailContainer .main .useback text {
  font-size: 26rpx;
  font-weight: bold;
}
.detailContainer .main .useback text.use {
  margin: 0 20rpx 0 0;
}
.detailContainer .main .btns {
  display: flex;
  height: 15%;
  margin-top: 20rpx;
  justify-content: space-around;
}
.detailContainer .main .btns view {
  width: 45%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 70rpx;
  font-weight: bold;
}
.detailContainer .main .btns view.leftBtn {
  color: #00D3D0;
  border: 2rpx solid #00D3D0;
}
.detailContainer .main .btns view.rightBtn {
  background-color: #00D3D0;
  color: #fff;
}
.detailContainer .main .bottom {
  font-size: 26rpx;
  text-align: center;
  color: #888;
  line-height: 100rpx;
}
.detailContainer .maskContainer {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: honeydew;
}
.detailContainer .maskContainer .content {
  /* 样式按需定制 */
}
.detailContainer .maskContainer .mask {
  /* 样式按需定制，例如透明度 */
  opacity: 0.5;
  /* 其他样式，比如位置、大小等 */
}