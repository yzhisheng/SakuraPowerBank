.nearContainer {
  height: 100%;
  background-color: #E8ECF2;
}
.nearContainer .map {
  height: 46%;
}
.nearContainer .list {
  border-radius: 50rpx;
  border-top: 5px solid #fff;
  height: 54%;
  box-sizing: border-box;
}
.nearContainer .list .item {
  padding: 40rpx;
  box-sizing: border-box;
  background-color: #fff;
  width: 90%;
  margin: 10rpx auto;
  border-radius: 30rpx;
  border: 1px solid greenyellow;
}
.nearContainer .list .item.active {
  border: 2px solid hotpink;
}
.nearContainer .list .item .itemTop {
  display: flex;
}
.nearContainer .list .item .itemTop .itemImg {
  width: 150rpx;
  height: 150rpx;
  border-radius: 30rpx;
}
.nearContainer .list .item .itemTop .itemMain {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  flex: 1;
  margin: 0 20rpx;
}
.nearContainer .list .item .itemTop .itemMain .mainTitle {
  font-size: 28rpx;
  font-weight: bold;
}
.nearContainer .list .item .itemTop .itemMain .mainAddress {
  font-size: 24rpx;
  color: #aaa;
}
.nearContainer .list .item .itemTop .itemMain .mainTime {
  font-size: 28rpx;
}
.nearContainer .list .item .itemTop .mainRight {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.nearContainer .list .item .itemTop .mainRight .rightImg {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}
.nearContainer .list .item .itemTop .mainRight .rightText {
  font-size: 26rpx;
  color: #aaa;
}
.nearContainer .list .item .itemBottom {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.nearContainer .list .item .itemBottom .bottomImg {
  width: 80rpx;
  height: 50rpx;
}
.nearContainer .list .item .itemBottom text {
  font-size: 26rpx;
  font-weight: bold;
}
.nearContainer .list .item .itemBottom text.use {
  margin: 0 20rpx 0 0rpx;
}