.orderDetailContainer {
  height: 100%;
  background-color: #eee;
  padding: 20rpx;
  box-sizing: border-box;
}
.orderDetailContainer .header .title {
  font-size: 38rpx;
  font-weight: bold;
}
.orderDetailContainer .header .desc {
  font-size: 28rpx;
  line-height: 60rpx;
}
.orderDetailContainer .content {
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 40rpx;
  padding: 20rpx;
}
.orderDetailContainer .content .timePrice {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.orderDetailContainer .content .timePrice .top {
  font-weight: bold;
}
.orderDetailContainer .content .timePrice .bottom {
  font-size: 26rpx;
  color: #888;
  margin-top: 10rpx;
}
.orderDetailContainer .content .timePrice .time {
  flex: 1;
}
.orderDetailContainer .content .timePrice .price {
  flex: 2;
}
.orderDetailContainer .content .line {
  height: 4rpx;
  background-color: #f5f5f5;
  margin: 20rpx 0;
}
.orderDetailContainer .content .priceDetail .title {
  font-weight: bold;
  line-height: 60rpx;
}
.orderDetailContainer .content .priceDetail .orderPrice {
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.orderDetailContainer .content .priceDetail .orderPrice .price {
  color: #888;
}
.orderDetailContainer .content .priceDetail .priceRule {
  font-size: 26rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  margin-top: 20rpx;
  line-height: 50rpx;
}
.orderDetailContainer .content .borrowInfo .title {
  font-weight: bold;
  margin-bottom: 20rpx;
}
.orderDetailContainer .content .borrowInfo .item {
  font-size: 26rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.orderDetailContainer .content .borrowInfo .item .itemTitle {
  color: #888;
}
.orderDetailContainer .content .btnContainer button {
  background-color: #FECB02;
  width: 70%;
  border-radius: 50rpx;
  font-weight: bold;
}